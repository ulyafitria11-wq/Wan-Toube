    <div id="results"></div>

    <script>
      const API_KEY = "AIzaSyC_cjLJnr0-T9yNR9WAe8oRq49V461-goM"; 

      async function searchVideo() {
        const query = document.getElementById("search").value;
        if (!query) return alert("Ketik dulu judul videonya!");

        const url = `https://www.googleapis.com/youtube/v3/search?part=snippet&q=${query}&type=video&maxResults=20&key=${API_KEY}`;
        const response = await fetch(url);
        const data = await response.json();

        let hasil = "";
        data.items.forEach(video => {
          const videoId = video.id.videoId;
          hasil += `
            <div class="video">
              <h3>${video.snippet.title}</h3>
              <img src="${video.snippet.thumbnails.medium.url}" alt="thumbnail" />
              <p>${video.snippet.channelTitle}</p>
              <button onclick="playVideo('${videoId}')">‚ñ∂Ô∏è Play</button>
            </div>
          `;
        });
        document.getElementById("results").innerHTML = hasil;
      }

      function playVideo(id) {
        const frame = `<iframe src="https://www.youtube.com/embed/${id}" frameborder="0" allowfullscreen></iframe>`;
        document.getElementById("results").innerHTML = frame;
      }
    </script>
